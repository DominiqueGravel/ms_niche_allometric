issn = {1537-5323},
journal = {The American naturalist},
keywords = {a-,abstract,are not exponentially bounded,described by fat-tailed,extreme events,fat-tailed kernels,for populations having dispersal,forest dynamics,holocene,kernels,kernels with tails that,migration,seed dispersal},

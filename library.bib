file = {:Users/DGravel/Library/Application Support/Mendeley Desktop/Downloaded/Barbier et al. - 2008 - Spatial decoupling of facilitation and competition at the origin of gapped vegetation patterns..pdf:pdf},
issn = {0012-9658},

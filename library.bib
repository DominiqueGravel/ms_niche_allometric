keywords = {Aquatic Organisms,Aquatic Organisms: physiology,Atlantic Ocean,Biota,Canada,Extinction, Biological,Food Chain,Geography,Human Activities,Humans,Poaceae,Poaceae: physiology,Principal Component Analysis,Seawater,Species Specificity},

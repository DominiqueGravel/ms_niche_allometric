keywords = {Animals,Biodiversity,Birds,Birds: physiology,Ecuador,Molecular Sequence Data,Phylogeny,Tropical Climate},
month = nov,
pages = {19673--8},
pmid = {19805042},
title = {{Phylogenetic structure in tropical hummingbird communities.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2780942\&tool=pmcentrez\&rendertype=abstract},
volume = {106 Suppl },

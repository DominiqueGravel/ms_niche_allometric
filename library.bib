file = {:Users/DGravel/Library/Application Support/Mendeley Desktop/Downloaded/Purves, Turnbull - 2010 - Different but equal the implausible assumption at the heart of neutral theory..pdf:pdf},
issn = {1365-2656},
journal = {The Journal of animal ecology},
month = aug,
number = {Clark 2009},
pages = {1--11},
pmid = {20726922},
title = {{Different but equal: the implausible assumption at the heart of neutral theory.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/20726922},
year = {2010}
}
@article{VanderPutten2010,
